{{#if this.userGroups.length}}
  <div class="user-card-groups">
    <span class="desc">Groups</span>
    <span class="group-list">
      {{#each this.userGroups as |group index|}}
        <a href="/g/{{group.name}}" class="group-link">{{group.name}}</a>{{#unless (eq index (dec this.userGroups.length))}}, {{/unless}}
      {{/each}}
    </span>
  </div>
{{/if}}

